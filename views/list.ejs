<%- include("header") -%>
    <div class="box" id="heading">
        <h1> <%=pageTitle%></h1>
    </div>
     <div class="box">
        <% items.forEach(item => { %>
             <div class="item">
                 <input type="checkbox">
                 <p><%= item %> </p>
             </div>
        <% }) %>
        <form class="item" action="/" method="POST">
           <input type="text" name="newItem" placeholder="type a new todo" autocomplete="off">
           <button type="submit" name="button" value="<%= pageTitle %>">+</button>
       </form>
    </div>
<%- include("footer") %> 